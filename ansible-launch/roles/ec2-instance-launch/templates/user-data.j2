#cloud-config

bootcmd:
  - yum-config-manager --enable epel

write_files:
  - content: {{ ec2_ansible_vault_password | b64encode }}
    encoding: b64
    path: /opt/ops/.vault-password
    permissions: '0400'
    owner: root:root

package_update: true
package_upgrade: true
repo_upgrade: all

packages:
  - git
  - ansible
  - screen
  - docker

package_reboot_if_required: true

